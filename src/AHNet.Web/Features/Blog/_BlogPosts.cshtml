@model Sakura.AspNetCore.IPagedList<BlogPost>

<div class="row">
    <div class="col-xs-12 no-padding">
        <div class="pull-right">
            <pager />
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-xs-12">
            <div class="row blog-post-preview-item">

                <a ahnet-blog-title="@item.Title.RemoveSpecialCharacters()">
                    <h3 class="blog-post-preview-title">@item.Title</h3>
                </a>
                <p class="blog-post-preview-info">
                    <i class="fa fa-calendar"></i>
                    <i>@item.DatePublished.ToFormattedString()</i>
                </p>
                @Html.Raw(item.GetBlogPostSummary())
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-xs-12 no-padding">
        <div class="pull-right">
            <pager />
        </div>
    </div>
</div>

