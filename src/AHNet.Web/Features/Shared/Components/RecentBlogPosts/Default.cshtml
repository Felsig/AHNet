@model IEnumerable<AHNet.Web.Features.Blog.ViewModels.BlogPostPreviewViewModel>

@if (Model.Any())
{
    <ul id="recent-posts-list">
        @foreach (var item in Model)
        {
            <li class="recent-posts-item">
                <a ahnet-blog-title="@item.UrlTitle">
                    @item.Title
                </a>
            </li>
        }
    </ul>
}
else
{
    <h3 class="text-center">No blog posts have been posted yet... Please come back later!</h3>
}