@model Sakura.AspNetCore.IPagedList<BlogPost>

@{
    ViewBag.Title = "blog posts";
}

<div id="blog-posts-header" class="pull-right">
    <a asp-controller="Admin" asp-action="CreateBlogPost" class="btn btn-info btn-md">Create blog post</a>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8 ">
        <pager />
    </div>
</div>

<ul class="list-unstyled">
    @foreach (var item in Model)
    {
        <li class="blog-posts-list">
            <a asp-controller="Admin" asp-action="EditBlogPost" asp-route-name="@item.UrlTitle">
                <div class="row">
                    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8">
                        <h3>@item.Title</h3>
                    </div>
                    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8 blog-post-preview-info">
                        <i>
                            <i class="fa fa-calendar"></i>
                            @item.DatePublished.ToFormattedString()
                            -
                            <span class="@(item.IsPublished ? "text-success" : "text-danger")">
                                @(item.IsPublished ? "Published" : "Not Published")
                            </span>
                        </i>
                    </div>
                </div>
            </a>
        </li>
    }
</ul>

<div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-10 col-md-offset-4 col-md-8 ">
        <pager />
    </div>
</div>